    "properties": {
        "id": {
            "description": "Customer ID",
            "type": "integer"
        },
        "company": {
            "description": "Customer's company",
            "type": "string"
        },
        "user": {
            "$ref": "../users/User.json"
        }
    },
    "required": [ "name" ]
}